<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.helloactivities.MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="LLL"
        android:ems="10"
        android:id="@+id/cmdInput"
        android:layout_below="@+id/treatmentPlansText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="44dp" />

    <TextView
        android:text="Your notifications:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/deviceStatusText"
        android:layout_alignParentStart="true"
        android:textSize="18sp" />

    <TextView
        android:text="Device status not loaded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/deviceStatusText"
        android:typeface="normal"
        android:textColor="?android:attr/colorForeground"
        android:textSize="18sp"
        android:singleLine="false"
        android:inputType="textMultiLine"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Notifications not loaded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/treatmentPlansText"
        android:textColor="?android:attr/colorForeground"
        android:textSize="18sp"
        android:inputType="textMultiLine"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true" />

    <Button
        android:text="CMD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cmdButton"
        android:visibility="visible"
        android:layout_alignBottom="@+id/cmdInput"
        android:layout_toEndOf="@+id/cmdInput" />

    <TextView
        android:text="Your device:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Notify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notifyButton"
        android:layout_alignBaseline="@+id/refreshButton"
        android:layout_alignBottom="@+id/refreshButton"
        android:layout_toEndOf="@+id/refreshButton" />

    <Button
        android:text="Refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/refreshButton"
        android:layout_alignBaseline="@+id/cmdButton"
        android:layout_alignBottom="@+id/cmdButton"
        android:layout_toEndOf="@+id/cmdButton" />

    <TextView
        android:text="Everything is OK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/errorText" />

</RelativeLayout>

